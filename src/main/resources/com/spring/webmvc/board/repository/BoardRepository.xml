<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.spring.webmvc.board.repository.BoardRepository">     <!-- mapper 안의 namespace에는 접근할 패키지 경로(상대경로)를 기입한다-->

    <select id="findAll">
        SELECT *
        FROM tbl_board
    </select>

    <select id="findOne" resultType="">
        SELECT *
        FROM tbl_board
        WHERE board_no = #{boardNo}
    </select>

    <insert id="save">
        INSERT INTO tbl_board(writer, title, content)
        VALUES(#{writer}, #{title}, #{content})
    </insert>

    <delete id="remove">
        DELETE FROM tbl_board
        WHERE board_no = #{boardNo}
    </delete>

    <update id="modify">
        UPDATE tbl_board
        SET title=#{title}, content=#{content}
        WHERE board_no = #{boardNo}
    </update>

</mapper>
