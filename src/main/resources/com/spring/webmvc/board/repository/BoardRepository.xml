<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- mapper 안의 namespace에는 접근할 패키지 경로(상대경로)를 기입한다-->
<mapper namespace="com.spring.webmvc.board.repository.BoardRepository">

    <!-- sql과 java의 이름관례 차이에서 오는 매핑을 맞춰주는 것 -->
    <resultMap id="boardMap" type="com.spring.webmvc.board.domain.Board">
        <result property="boardNo" column="board_no"/>
        <result property="viewCnt" column="view_cnt"/>
        <result property="regDate" column="reg_date"/>
    </resultMap>


    <select id="findAll" resultMap="boardMap">
        SELECT *
        FROM tbl_board
    </select>

    <select id="findOne" resultMap="boardMap">
        SELECT *
        FROM tbl_board
        WHERE board_no = #{boardNo}
    </select>

    <insert id="save">
        INSERT INTO tbl_board(writer, title, content)
        VALUES(#{writer}, #{title}, #{content})
    </insert>

    <delete id="remove">
        DELETE FROM tbl_board
        WHERE board_no = #{boardNo}
    </delete>

    <update id="modify">
        UPDATE tbl_board
        SET title=#{title}, content=#{content}
        WHERE board_no = #{boardNo}
    </update>

</mapper>
